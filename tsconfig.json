{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["dev/**/*.ts", "dev/**/*.d.ts", "dev/**/*.vue", "dev/**/*.ts", "lib/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
